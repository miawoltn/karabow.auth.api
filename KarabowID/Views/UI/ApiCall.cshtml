
@{
    ViewBag.Title = "ApiCall";
}
@section Scripts {
    @Scripts.Render("~/bundles/app")
}
<h2>ApiCall</h2>
<div class="row">
    <div class="col-sm-4">
        <form data-bind="submit: callApi">
            <h3>Invoke API</h3>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Get User Info</button>
            </div>
        </form>
    </div>
    <div class="col-sm-4">
            <h3>Result</h3>
            <div class="form-group">
                @*<input class="form-control" type="text" readonly data-bind="value: result" />*@
                <ul id="error"></ul>
            </div>
    </div>
</div>
