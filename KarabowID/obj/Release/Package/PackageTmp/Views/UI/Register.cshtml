
@{
    ViewBag.Title = "Register";
}
@section Scripts {
    @Scripts.Render("~/bundles/app")
}


<h2>Register</h2>
<div class="row">
    <div class="col-sm-4">
        <form data-bind="submit: register">
            <h3>Register</h3>
            <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" type="text" data-bind="value: registerName" />
            </div>
            <div class="form-group">
                <label>ID</label>
                <input class="form-control" type="text" data-bind="value: registerID" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: registerEmail" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword" />
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input class="form-control" type="password" data-bind="value: registerPassword2" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Register</button>&nbsp;<span><a href="Login">Login</a></span>
            </div>
        </form>
    </div>
    <div class="col-sm-4">
        <form data-bind="submit: callApi">
            <h3>Result</h3>
            <div class="form-group">
                @*<input class="form-control" type="text" readonly data-bind="value: result" />*@
                <ul id="error"></ul>
            </div>
        </form>
    </div>
</div>